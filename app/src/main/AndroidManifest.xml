<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.madcamp_week2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.Madcamp_week2"
        android:usesCleartextTraffic="true">
        <activity android:name=".share.SharedActivity"></activity>
        <activity android:name=".weather.Detail_Activity" />
        <activity android:name=".style.StyleActivity" />
        <activity
            android:name=".weather.WeatherActivity"
            android:exported="false"
            android:hardwareAccelerated="false" />
        <activity
            android:name=".main.SignupActivity"
            android:exported="true" />
        <activity
            android:name=".main.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.SplashActivity"
            android:exported="false"
            android:hardwareAccelerated="false" />
        <activity
            android:name=".main.MainActivity"
            android:exported="false"
            android:hardwareAccelerated="false" />
    </application>

</manifest>