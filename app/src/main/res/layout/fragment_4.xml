<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".share.Shared_Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tab4"
        android:layout_marginBottom="60dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/medium"
                android:textSize="28dp"
                android:textColor="@color/bold_red"
                android:text="코디 공유 기능 사용 시 주의점"
                >
            </TextView>
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="해당 서비스에서는 '코디' 탭에서 다른 사람이 선택한 상의, 하의, 겉옷, 액서사리 총 4가지 파트를 확인하실 수 있습니다."
                android:textSize="16dp"
                android:fontFamily="@font/regular"
                android:textColor="@color/bold_red"
                >
            </TextView>
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="-10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자신의 성별 외에도 다른 성별의 코디까지 전부 확인하실 수 있습니다."
                android:textSize="16dp"
                android:fontFamily="@font/regular"
                android:textColor="@color/bold_red"
                >
            </TextView>
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="-10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="혹시 다른 사람들이 보기에 불쾌한 코디를 보셨을 경우 개발자에게 신고해 주시길 바랍니다."
                android:textSize="16dp"
                android:fontFamily="@font/regular"
                android:textColor="@color/bold_red"
                >
            </TextView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/move_shared"
                android:layout_width="300dp"
                android:layout_marginTop="15dp"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:background="@color/bold_red"
                android:text="이동하기"
                android:textColor="@color/white"
                android:fontFamily="@font/regular"
                android:layout_gravity="center_horizontal"
                >
            </androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>

    </ScrollView>

</FrameLayout>